#include <QtCore/QCoreApplication>
#include <QDir>

static QString SNAP_ENV = qgetenv("SNAP");

inline bool isRunningInstalled() {
    static bool installed = (QCoreApplication::applicationDirPath() ==
                             QDir(("@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_BINDIR@")).canonicalPath());
    return installed;
}

inline QString clipboardAppDirectory() {
    static QString clipboardPath("tools/clipboard/");
    if (!SNAP_ENV.isEmpty()) {
        return SNAP_ENV + "@CMAKE_INSTALL_PREFIX@/@CLIPBOARD_APP_DIR@/" + clipboardPath;
    } else if (isRunningInstalled()) {
        return QString("@CMAKE_INSTALL_PREFIX@/@CLIPBOARD_APP_DIR@/") +clipboardPath;
    } else {
        return QString("@CMAKE_SOURCE_DIR@") + clipboardPath;
    }
}

inline QString clipboardAppImportDirectory() {
    if (!SNAP_ENV.isEmpty()) {
        return SNAP_ENV + "@CMAKE_INSTALL_PREFIX@/@PLUGIN_BASE@";
    } else {
        return "@CMAKE_INSTALL_PREFIX@/@PLUGIN_BASE@";
    }
}

inline QString sourceQml() {
    static QString qmlFile("clipboard-app.qml");
    return QDir::currentPath() + "/" + qmlFile;
}
